<Page x:Class="SkzBackupRestore.Wpf.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    ui:ThemeManager.IsThemeAware="True"
    Title="Settings">
    <Grid Margin="16">
        <StackPanel>
            <ContentControl Content="Settings" Style="{StaticResource PageHeaderControl}" />
            <GroupBox Header="Appearance" Margin="0,16,0,0">
                <StackPanel Orientation="Vertical" Margin="8">
                    <ui:ToggleSwitch x:Name="PreferDarkToggle"
                                      Header="Use dark theme when Windows is in light mode"
                                      Toggled="PreferDarkToggle_Toggled"/>
                    <TextBlock Text="When on, the app uses dark theme if Windows' Apps theme is light; otherwise it follows Windows." Margin="0,8,0,0" />
                </StackPanel>
            </GroupBox>

            <GroupBox Header="Backup Verification" Margin="0,16,0,0">
                <StackPanel Orientation="Vertical" Margin="8">
                    <ui:ToggleSwitch x:Name="AutoVerifyToggle"
                                      Header="Automatically verify all backup images"
                                      Toggled="AutoVerifyToggle_Toggled"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                        <TextBlock Text="Verification mode:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="VerificationModeCombo" Width="180" SelectionChanged="VerificationModeCombo_SelectionChanged">
                            <ComboBoxItem Content="Full"/>
                            <ComboBoxItem Content="Quick"/>
                        </ComboBox>
                    </StackPanel>
                    <TextBlock Text="Full verification reads and validates all chunks. Quick verification performs a faster integrity check." Margin="0,8,0,0" TextWrapping="Wrap"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Page>